<%- include('../partials/header') %>
<table id="list">
  <thead>
    <tr>
      <th>Name</th>
      <th>Recipe</th>
      <th>Description</th>
      <th>Submitted By</th>
    </tr>
  </thead>
  <tbody>
    <% recipes.forEach(function(s) { %>
      <tr>
        <td><%= s.name %></td>
        <td><%= s.recipe %></td>
        <td><%= s.description %></td>
        <td><%= s.user.name %></td>
        <td><a href="/recipes/<%= s._id %>">DETAILS</a></td>
      </tr>
      <% }); %>
    </tbody>
  </table>
<%- include('../partials/footer') %>